{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "parserOptions": {
    "babelOptions": {
      "presets": [
        ["babel-preset-react-app", false],
        "babel-preset-react-app/prod"
      ]
    }
  },
  "rules": {
    "no-negated-in-lhs": [
      0
    ],
    "no-native-reassign": [
      0
    ],
    "import/no-anonymous-default-export": [
      0
    ],
    "react-hooks/exhaustive-deps": [
      0
    ],
    "jsx-a11y/alt-text": [
      0
    ],
    "anchor-is-valid": [
      0
    ],
    "array-callback-return": [
      0
    ],
    "no-mixed-operators": [
      0,
      "always"
    ],
    "eqeqeq": [
      1,
      "always"
    ], //提示使用全等
    "no-unused-vars": [
      0
    ], // 不提示未使用的变量
    "block-spacing": [
      2,
      "always"
    ], // 强制在单行代码块中使用一致的空格
    "semi": [
      0,
      "never"
    ], // 要求或禁止使用分号而不是 ASI
    "quotes": [
      "error",
      "single"
    ] // 强制使用单引号
  }
}